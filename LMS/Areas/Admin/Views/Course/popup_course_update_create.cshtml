<div class="modal fade" id="CourseUpdateDetail">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title"></h3>
            </div>

            <div class="modal-body">
                <form role="form" id="frmSaveData-Course" method="post" enctype="multipart/form-data">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label for="op1">Học kỳ:</label>
                            <div class="col-md-10">
                                <select id="title" class="dropdown-header semester_id" name="semestername">
                                    <option value="" style="text-align:center">Chọn học kỳ</option>
                                </select>
                                <input type="hidden" class="form-control" id="semester_id" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="nameCourse">Mã học phần</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="IDcourse" name="idcourse"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="nameCourse">Học phần</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="namecourse" name="coursename" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="description">Mô tả học phần:</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="description" name="description" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="facultyname">Khoa:</label>
                            <div class="col-md-10">
                                <select id="facultyname" class="dropdown-header" name="facultyname">
                                    <option value="">Chọn khoa</option>
                                </select>
                                <input type="hidden" class="form-control" id="IDfacl" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="op2">Môn học:</label>
                            <div class="col-md-10">
                                <select id="namesubject" class="dropdown-header subject_id" name="subjectname">
                                    <option value="">Chọn môn học</option>
                                </select>
                                <input type="hidden" id="subject_id" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="teachername">Giảng viên:</label>
                            <div class="col-md-10">
                                <select id="teachername" class="dropdown-header" name="teachername">
                                    <option value="">Chọn giảng viên</option>
                                </select>
                                <input type="hidden" class="form-control" id="IDteacher" />
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="file" name="file" accept="application/vnd.ms-excel" id="file" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" id="btnSave-Course">Confirm</button>
            </div>
        </div>
    </div>
</div>