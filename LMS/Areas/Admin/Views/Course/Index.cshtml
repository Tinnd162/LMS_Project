@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BlankAdminLayout.cshtml";
}

@section scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js" integrity="sha512-RdSPYh1WA6BF0RhpisYJVYkOyTzK4HwofJ3Q7ivt/jkpW6Vc8AurL1R+4AUcvn9IwEKAPm/fk7qFZW3OuiUDeg==" crossorigin="anonymous"></script>

    <script src="~/Scripts/Admin/mustache.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/twbs-pagination/1.4.2/jquery.twbsPagination.min.js" integrity="sha512-frFP3ZxLshB4CErXkPVEXnd5ingvYYtYhE5qllGdZmcOlRKNEPbufyupfdSTNmoF5ICaQNO6SenXzOZvoGkiIA==" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/Admin/courseController.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin học phần</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="d-flex justify-content-between align-center mb-3">
                <div>
                    <button class="btn btn-success" id="btnAdd-Course"><i class="fa fa-plus-square"></i></button>
                </div>
                <div class="d-flex justify-content-end align-center">
                    <div class="dataTables_filter mr-3"><input type="search" class="form-control" placeholder="Nhập thông tin tìm kiếm" aria-controls="dataTable" id="txtSearch"></div>
                    <button class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
                </div>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Học phần</th>
                        <th>Mô tả học phần</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblData-Course">
                </tbody>
            </table>
            <div id="pagination" class="pagination">

            </div>

            <script id="data-Course" type="x-tmpl-mustache">
                <tr>

                    <input type="hidden" value="{{ID}}"/>
                    <input type="hidden" value="{{IDFACULTY}}"/>
                    <td>{{NAME}}</td>
                    <td>{{DESCRIPTION}}</td>
                    <input type="hidden" value="{{IDSEMESTER}}"/>
                    <td>
                        <button class="btn btn-primary btn-edit-Course" data-id="{{ID}}" data-facl="{{IDFACULTY}}"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-danger btn-delete-Course" data-id="{{ID}}"><i class="fa fa-trash-alt"></i></button>
                        <button class="btn btn-info btn-info-Course" data-id="{{ID}}"><i class="fa fa-info"></i></button>
                </td>
                </tr>
            </script>
        </div>
    </div>
</div>

