                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">HNVT<sup>2</sup></div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider" />

            <!-- Heading -->
            <div class="sidebar-heading">Quản lý</div>

            <!-- Nav Item - Pages Collapse Menu -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Admin/Semester/Index">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Học kỳ</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Admin/Subjects/Index">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Môn học</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Admin/Course/Index">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
