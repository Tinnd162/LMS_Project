@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BlankAdminLayout.cshtml";
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js" integrity="sha512-RdSPYh1WA6BF0RhpisYJVYkOyTzK4HwofJ3Q7ivt/jkpW6Vc8AurL1R+4AUcvn9IwEKAPm/fk7qFZW3OuiUDeg==" crossorigin="anonymous"></script>
    <script src="~/Scripts/Admin/mustache.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twbs-pagination/1.4.2/jquery.twbsPagination.min.js" integrity="sha512-frFP3ZxLshB4CErXkPVEXnd5ingvYYtYhE5qllGdZmcOlRKNEPbufyupfdSTNmoF5ICaQNO6SenXzOZvoGkiIA==" crossorigin="anonymous"></script>
    <script src="~/Scripts/Admin/studentController.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin sinh viên</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="d-flex justify-content-between align-center mb-3">
                <form enctype="multipart/form-data" method="post">
                    <div class="d-flex justify-content-end align-center mr-3">
            <div class="dataTables_filter mr-3"><input type="file" name="file" accept="application/vnd.ms-excel" required id="file" /></div>
            <button class="btn btn-primary" id="btnAddUser"><i class="fa fa-plus-square"></i></button>
                    </div>
                   
                </form>
                <div class="d-flex justify-content-end align-center">
                    <div class="dataTables_filter mr-3"><input type="search" class="form-control" placeholder="Nhập thông tin tìm kiếm" aria-controls="dataTable" id="txtSearch"></div>
                    <button class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
                </div>
            </div>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Khoa</th>
                        <th>Lớp</th>
                        <th>Họ và tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="tblData-Student">
                </tbody>
            </table>
            <div id="pagination" class="pagination"></div>
            <script id="data-Student" type="x-tmpl-mustache">
                <tr>
                    <input type="hidden" value="{{IDFACULTY}}"/>
                    <td>{{NAMEFACULTY}}</td>
                    <input type="hidden" value="{{IDCLASS}}"/>
                    <td>{{NAMECLASS}}</td>
                    <input type="hidden" value="{{ID}}"/>
                    <td>{{FIRST_NAME}}</td>
                    <td>{{PHONE_NO}}</td>
                    <td>{{MAIL}}</td>
                    <td>
                        <button class="btn btn-primary btn-edit-Student" data-id="{{ID}}" data-fac="{{IDFACULTY}}"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-danger btn-delete-Student" data-id="{{ID}}"><i class="fa fa-trash-alt"></i></button>
                        <button class="btn btn-info btn-info-Student" data-id="{{ID}}"><i class="fa fa-info"></i></button>
                    </td>
                </tr>
            </script>
        </div>
    </div>
</div>

@RenderPage("popup_update_detail_student.cshtml")
